<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx" fx:controller="uczelnia.controllers.SearchController" alignment="CENTER" spacing="10">
    <HBox>
        <ComboBox fx:id="selectionComboBox" onAction="#zmianaParametruWyszukiwania"/>
        <TextField fx:id="searchField"/>
        <Button onAction="#szukaj" text="Szukaj"/>
    </HBox>
    <Text text="Wyszukano" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <ListView fx:id="wyszukano" maxHeight="200"/> 
    <Button onAction="#usunGrupe" text="Usuń grupę" style="-fx-background-color: red; -fx-text-fill: white;"/>
</VBox>